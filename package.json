{
  "name": "PROSHOP",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "https://github.com/Matheus-SS/PROSHOP.git",
  "author": "Matheus Santos <matheus_sa_santos@hotmail.com>",
  "license": "MIT",
  "engines": {
    "node": "16.10.0"
  },
  "scripts": {
    "start": "node dist/backend/server.js",
    "server": "tsnd --files backend/server.ts",
    "copy-views": "cpx ./backend/views/** dist/backend/views",
    "copy-uploads": "cpx ./backend/uploads/** dist/backend/uploads",
    "tsc": "tsc && npm run copy-views && npm run copy-uploads",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "data:import": "tsnd backend/seeder.ts",
    "data:destroy": "tsnd backend/seeder.ts -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend && npm run tsc",
    "deploy": "git add . && git commit -m Heroku && git push heroku master",
    "test": "jest",
    "test:coverage": "set CI=true && yarn test --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.25.1",
    "colorts": "^0.1.63",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "handlebars": "^4.7.7",
    "imagemin-mozjpeg": "^9.0.0",
    "is-jpg": "^2.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.9.9",
    "nodemailer-sendgrid": "^1.0.3",
    "sharp": "^0.28.1",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.5.1",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@types/react-helmet": "^6.1.1",
    "@types/sharp": "^0.28.0",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^5.3.0",
    "jest": "26.6.0",
    "ts-jest": "^26.5.1",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  }
}
