{
  "name": "PROSHOP",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "https://github.com/Matheus-SS/PROSHOP.git",
  "author": "Matheus Santos <matheus_sa_santos@hotmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.6.0"
  },
  "scripts": {
    "start": "node dist/backend/server.js",
    "server": "tsnd --files backend/server.ts",
    "copy-views": "cpx ./backend/views/** dist/backend/views",
    "tsc": "tsc && yarn copy-views && rm -v -rf dist/frontend",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "generate": "tsoa routes && tsoa swagger",
    "data:import": "tsnd backend/seeder.ts",
    "data:destroy": "tsnd backend/seeder.ts -d",
    "heroku-postbuild": "npm install --prefix frontend && npm run build --prefix frontend && npm run tsc",
    "deploy": "git add . && git commit -m Heroku && git push heroku master",
    "test": "jest",
    "test:coverage": "set CI=true && yarn test --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colorts": "^0.1.63",
    "cpx": "^1.5.0",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "handlebars": "^4.7.6",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "nodemailer": "^6.4.16",
    "nodemailer-sendgrid": "^1.0.3",
    "tsoa": "^3.5.1",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/nodemailer": "^6.4.0",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "concurrently": "^5.3.0",
    "jest": "24.9.0",
    "ts-jest": "^26.5.1",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.0.3"
  }
}
