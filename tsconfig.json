{
  "compilerOptions": {
    "lib": ["ES2015","DOM"],
    "target": "es5",                          
    "module": "commonjs",                     
     "jsx": "react",                     
    "outDir": "./dist",                       
    "strict": true,                           
     "strictPropertyInitialization": true,
     "resolveJsonModule": true,  
     "moduleResolution": "node",            
    "esModuleInterop": true,                  
     "experimentalDecorators": true,        
     "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true  
  }
}
